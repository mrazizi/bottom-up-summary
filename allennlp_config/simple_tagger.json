{
  "dataset_reader": {
    "type": "sequence_tagging",
    "word_tag_delimiter": "###",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "token_characters": {
        "type": "characters"
      }
    }
  },
  "train_data_path": "/content/drive/My Drive/SNLP/Final Project/paper2/content-selection dataset/multicopy.000.txt",
  "validation_data_path": "/content/drive/My Drive/SNLP/Final Project/paper2/val-content-selection dataset/multicopy.000.txt",
  "model": {
    "type": "simple_tagger",
    "text_field_embedder": {
            "tokens": {
                    "type": "embedding",
                    "embedding_dim": 10
            },
            "token_characters": {
              "type": "character_encoding",
              "embedding": {
                "embedding_dim": 8
              },
              "encoder": {
                "type": "cnn",
                "embedding_dim": 8,
                "num_filters": 10,
                "ngram_filter_sizes": [5]
              },
              "dropout": 0.2
            }
    },
    "encoder": {
            "type": "lstm",
            "input_size": 20,
            "hidden_size": 20,
            "num_layers": 1,
            "dropout": 0.1,
            "bidirectional": true
    }
  },
  "iterator": {"type": "basic", "batch_size": 8},
  "trainer": {
    "optimizer": "adagrad",
    "num_epochs": 1,
    "grad_clipping": 2,
    "patience": 10,
    "cuda_device": 0
  }
}
